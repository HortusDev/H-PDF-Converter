<Window x:Class="H_PDF_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H_PDF_Converter"
        mc:Ignorable="d"
        MinHeight="350"
        MinWidth="500"
        Title="" Height="450" Width="700">
    <Grid
       
        x:Name="myGrid"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition  MinWidth="135"></ColumnDefinition>
            <ColumnDefinition  MinWidth="181"></ColumnDefinition>
            <ColumnDefinition  MinWidth="124"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Source="Images/sample.png" Stretch="Fill" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" Height="72" Width="180" />

        <Label Grid.Column="1" Grid.Row="1" Content="H PDF Converter" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontWeight="Bold" FontSize="16" Foreground="Violet" Height="31" Width="166" />


        <Button   Content="Select PDF File"  
                              HorizontalAlignment="Left" Height="35" 
                              Grid.Row="2" VerticalAlignment="Center" Width="114"
                              Background="Violet"
                              Foreground="White"
                              Click="SelectFile_Click" Margin="109,0,0,0"
                              />

        <TextBox x:Name="pathTextBox" Grid.Column="1" Grid.Row="2" TextWrapping="NoWrap" AcceptsReturn="False" 
                 Margin="10,10,10,10"
                 />


        <ComboBox x:Name="conversionDropDown" Text ="     Select Format" Grid.Column="2" Grid.Row="2" 
                                  Foreground="Violet"  Width="123" IsEditable="True" IsReadOnly="True" Margin="8,4,102,59" FontWeight="Bold" Grid.RowSpan="2" 
                                >
            <Button Content="  PDF to Doc" Foreground="Purple" Click="ConvertToDoc"/>
            <Button Content="  PDF to JPEG" Foreground="Purple" Click=" ConvertToJPEG"/>
            <Button Content="  PDF to PNG" Foreground="Purple" Click="ConvertToPnG"/>
            <Button Content="  PDF to TXT" Foreground="Purple" Click="ConvertToTXT"/>

        </ComboBox>

        <Button Content="Convert" 
                              HorizontalAlignment="Left" Height="35" 
                              Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Width="114"
                              Background="Violet"
                              Foreground="White"
                              Click="SelectFileClick" Margin="50,25,0,0"
                              />

    </Grid>
</Window>

